<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/archer_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="Archer #1"
                android:textColor="#616161"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/archer_1_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp" />

            <Button
                android:id="@+id/score_1_points"
                style="@style/CustomButtonStyle"
                android:layout_marginBottom="8dp"
                android:onClick="addOneForArcher1"
                android:text="+1 points" />

            <Button
                android:id="@+id/score_3_points"
                style="@style/CustomButtonStyle"
                android:layout_marginBottom="8dp"
                android:onClick="addThreeForArcher1"
                android:text="+3 points" />

            <Button
                android:id="@+id/score_5_points"
                style="@style/CustomButtonStyle"
                android:layout_marginBottom="8dp"
                android:onClick="addFiveForArcher1"
                android:text="+5 points" />

            <Button
                android:id="@+id/score_7_points"
                style="@style/CustomButtonStyle"
                android:layout_marginBottom="8dp"
                android:onClick="addSevenForArcher1"
                android:text="+7 points" />

            <Button
                android:id="@+id/score_9_points"
                style="@style/CustomButtonStyle"
                android:onClick="addNineForArcher1"
                android:text="+9 points" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/archer_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="Archer #2"
                android:textColor="#616161"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/archer_2_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp" />

            <Button
                android:id="@+id/score2_1_points"
                style="@style/CustomButtonStyle"
                android:layout_marginBottom="8dp"
                android:onClick="addOneForArcher2"
                android:text="+1 points" />

            <Button
                android:id="@+id/score2_3_points"
                style="@style/CustomButtonStyle"
                android:layout_marginBottom="8dp"
                android:onClick="addThreeForArcher2"
                android:text="+3 points" />

            <Button
                android:id="@+id/score2_5_points"
                style="@style/CustomButtonStyle"
                android:layout_marginBottom="8dp"
                android:onClick="addFiveForArcher2"
                android:text="+5 points" />

            <Button
                android:id="@+id/score2_7_points"
                style="@style/CustomButtonStyle"
                android:layout_marginBottom="8dp"
                android:onClick="addSevenForArcher2"
                android:text="+7 points" />

            <Button
                android:id="@+id/score2_9_points"
                style="@style/CustomButtonStyle"
                android:onClick="addNineForArcher2"
                android:text="+9 points" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="32dp"
        android:onClick="scoreReset"
        android:text="RESET" />
</RelativeLayout>